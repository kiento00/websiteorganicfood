@model WebsiteBanHangs.Context.TaiKhoan

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using BotDetect.Web.Mvc;
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" /> @{ MvcCaptcha registerCapcha = new MvcCaptcha("registerCapcha"); registerCapcha.UserInputID = "CaptchaCode";}


@using (Html.BeginForm("DangKy", "Home"))

{

    <!-- ========================= SECTION CONTENT ========================= -->
    <section class="section-content padding-y">

        <!-- ============================ COMPONENT REGISTER   ================================= -->
        <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
            <article class="card-body">
                <header class="mb-4"><h4 class="card-title">Tạo tài khoản</h4></header>
                <form>
                    @ViewBag.ThongBao
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <input type="text" name="SDT" class="form-control" placeholder="" @Html.TextBoxFor(model => model.SDT, new { @class = "form-control", @autofocus = "autoforcus" })

                    </div> <!-- form-group end.// -->

                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" name="Email" class="form-control" placeholder="" @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autofocus = "autoforcus" })

                    </div> <!-- form-group end.// -->

                    <div class="form-group">
                        <label>Mật Khẩu</label>
                        <input type="password" name="MatKhau" class="form-control" placeholder="" @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control", @autofocus = "autoforcus" })

                    </div> <!-- form-group end.// -->

                    <div class="form-group">
                        <label>Xác nhận mật khẩu</label>
                        <input class="form-control"
                               data-val="true" data-val-required="Phải nhập mật khẩu xác nhận!"
                               id="MatKhauXacNhan" name="MatKhauXacNhan" type="password" value="" aria-
                               describedby="MatKhauXacNhan-error" aria-invalid="true">

                        @ViewData["NhapMKXN"]
                        @ViewData["MatKhauGiongNhau"]

                    </div> <!-- form-group end.// -->


                    <div class="form-group">
                        <label>Ngày Tạo</label>
                        <input type="text" class="form-control" name="NgayTao" placeholder="" @Html.TextBoxFor(model => model.NgayTao, new { @class = "form-control", @autofocus = "autoforcus" })

                    </div> <!-- form-group end.// -->

                    <div class="form-group">
                        <label>Họ Tên</label>
                        <input type="text" name="HoTen" class="form-control" placeholder="" @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control", @autofocus = "autoforcus" })

                    </div> <!-- form-group end.// -->

                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <input type="text" name="DiaChi" class="form-control" placeholder="" @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control", @autofocus = "autoforcus" })


                    </div> <!-- form-group end.// -->

                    <div>

                        @Html.Captcha(registerCapcha)
                        @Html.TextBox("CaptChaCode")
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Đăng Kí  </button>
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <label class="custom-control custom-checkbox"> <input type="checkbox" class="custom-control-input" checked=""> <div class="custom-control-label"> I am agree with <a href="#">terms and contitions</a>  </div> </label>
                    </div> <!-- form-group end.// -->
                </form>
            </article><!-- card-body.// -->

        </div> <!-- card .// -->
        <p class="text-center mt-4">Have an account? <a href="">Log In</a></p>
        <br><br>
        <!-- ============================ COMPONENT REGISTER  END.// ================================= -->


    </section> <!-- ========================= SECTION CONTENT END// ========================= -->
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
